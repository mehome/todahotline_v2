<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_old"
    android:orientation="vertical"
    tools:context="com.todahotline.NewMessageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_old">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:padding="8dp"
            android:src="@drawable/back_delete_mode" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Soạn tin nhắn"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/send_message"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/send_message" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.linphone.CustomAutoCompleteText
                android:id="@+id/autocomplete_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:hint="Tới"
                android:textColorHint="@color/white" />

            <ImageView
                android:id="@+id/add_from_contacts"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/add_contact_send_message" />
        </RelativeLayout>


        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Chủ đề"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:gravity="top"
            android:hint="Nội dung"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/btn_add_attachment"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_button_attachment"
            android:text="Chọn tệp"
            android:textColor="@color/black"
            android:textSize="8dp" />

        <ListView
            android:divider="@null"
            android:id="@+id/list_send_attachment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0dp">

        </ListView>
    </LinearLayout>
</LinearLayout>
