<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:background="@drawable/bg_old"

	android:orientation="vertical" >

	<RelativeLayout
		android:id="@+id/delete_bar"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:visibility="gone">

		<ImageView
			android:id="@+id/back_delete_mode"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:src="@drawable/back_delete_mode"
			android:visibility="gone" />

		<ImageButton
			android:id="@+id/delete_contact"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="16dp"
			android:background="@drawable/transparent"
			android:padding="8dp"
			android:scaleType="center"
			android:src="@drawable/ic_delete_black_24dp"
			android:visibility="gone" />

	</RelativeLayout>

	<LinearLayout
		android:id="@+id/top_bar"
		android:orientation="horizontal"
		android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.andexert.library.RippleView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.2">

            <TextView
                android:gravity="center"
				android:id="@+id/all_calls"
				android:text="@string/all_calls"
                android:textColor="@color/white"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true" />

			<View
				android:id="@+id/all_calls_select"
				android:background="@color/colorA"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_alignParentBottom="true"/>
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.2">

            <TextView
				android:gravity="center"
                android:id="@+id/missed_calls"
				android:text="@string/missed_calls"
                android:textColor="@color/white"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>


            <View
				android:id="@+id/missed_calls_select"
				android:background="@color/colorA"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:visibility="gone"
				android:layout_alignParentBottom="true"/>
        </com.andexert.library.RippleView>

		<View
			android:visibility="gone"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.4"/>

		<ImageView
			android:visibility="gone"
			android:id="@+id/edit"
			android:src="@drawable/edit_list_button"
			android:background="@drawable/toolbar_button"
			android:contentDescription="@string/content_description_edit_list"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.2"
			android:padding="15dp"/>
	</LinearLayout>

	<RelativeLayout
		android:id="@+id/rl_searchfield"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp">

		<org.linphone.layoutXML.ExtendedEditText
            android:imeOptions="actionDone"
			android:id="@+id/searchField"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:background="@drawable/resizable_textfield"
			android:contentDescription="@string/content_description_search_contact"
			android:hint="@string/search_hint_text"
			android:inputType="textPersonName"
			android:textColor="@android:color/black"
			android:textCursorDrawable="@null" />


		<ImageView
			android:id="@+id/clearSearchField"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_alignRight="@+id/searchField"
			android:layout_centerVertical="true"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:src="@drawable/clean_field_default" />
	</RelativeLayout>

	<CheckBox
		android:id="@+id/delete_all"
		android:layout_width="wrap_content"
		android:layout_height="25dp"
		android:layout_gravity="right"
		android:layout_marginBottom="8dp"
		android:layout_marginRight="16dp"
		android:button="@drawable/custom_tickbox"
		android:text="@string/all_ext_fillter"
		android:textColor="@android:color/white"
        android:textSize="15sp"
		android:visibility="gone" />

	<include layout="@layout/edit_list"/>

	<ListView
		android:scrollbars="none"
		android:id="@+id/history_list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:cacheColorHint="@color/transparent"
		android:dividerHeight="1dp" />

	<TextView
		android:id="@+id/no_call_history"
		android:text="@string/no_call_history"
		style="@style/font6"
		android:visibility="gone"
		android:textColor="@color/white"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"/>

	<TextView
		android:textColor="@color/white"
		android:id="@+id/no_missed_call_history"
		android:text="@string/no_missed_call_history"
		style="@style/font6"
		android:visibility="gone"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"/>

</LinearLayout>
